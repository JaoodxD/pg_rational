----------
 f
(1 row)

-- lte
select r
  from unnest(ARRAY[
      '3037000501/3037000501',
      '0/9999999',
      '-11/17',
      '100/1',
      '3/4',
      '-1/2',
      '5/8',
      '6/9',
      '5/8'
    ]::rational[]) as r
order by r asc;
           r           
-----------------------
